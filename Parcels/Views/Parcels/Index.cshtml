@using Parcels.Models;

<h1>Packages to ship</h1>
@if (Model.Count == 0)
{
    <p>Please enter your package information</p>
}

<ul>
    @foreach (Parcel parcel in Model)
    {
        <li>@parcel.Length in. x @parcel.Width in. x @parcel.Height in.<br>
            weight = @parcel.Weight lbs.
            volume = @parcel.Volume<br>
            cost to ship $@parcel.Cost
        </li>
    }
</ul>

<a href="/parcels/new">Add another package</a><br>
<a href="/">Return to the home page!</a>